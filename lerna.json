{
  "$schema": "node_modules/lerna/schemas/lerna-schema.json",
  "version": "0.0.4-alpha.0",
  "publish": {
    "ignoreChanges": [
      "ignored-file",
      "*.md"
    ],
    "bootstrap": {
      "ignore": "component-*",
      "npmClientArgs": [
        "--no-package-lock"
      ],
      "hoist": true
    }
  },
  "packages": [
    "packages/*"
  ],
  "command": {
    "run": {
      "script": "build",
      "stream": true
    }
  }
}
